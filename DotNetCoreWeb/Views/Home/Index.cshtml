@{
    ViewData["Title"] = "Home Page";
}
@using DotNetCoreWeb.Service
@inject ITransientService transient
@inject IScopedService scoped
@inject ISingletonService singleton
<h2>Home/Index</h2>
<hr />
<table class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>Title</th>
            <th>Value</th>
        </tr>
    </thead>
    <tr>
        <td>singleton</td>
        <td>@ViewBag.A</td>
    </tr>
    <tr>
        <td>同一個Request singleton</td>
        <td>@(singleton.Get<string, string>("uGUID"))</td>
    </tr>
    <tr>
        <td>scoped</td>
        <td>@ViewBag.B</td>
    </tr>
    <tr>
        <td>同一個Request scoped</td>
        <td>@(scoped.Get<string, string>("uGUID"))</td>
    </tr>
    <tr>
        <td>transient</td>
        <td>@ViewBag.C</td>
    </tr>
    <tr>
        <td>同一個Request transient</td>
        <td>@(transient.Get<string, string>("uGUID"))</td>
    </tr>
</table>
