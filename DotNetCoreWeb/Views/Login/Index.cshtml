@model IEnumerable<DotNetCoreWeb.Models.sysSecurity>

@{
    ViewData["Title"] = "Index";
}

<h2>Login/Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LoginID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoginID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EDate)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.UID }) |

                            @using (Html.BeginForm("Delete", "Login", FormMethod.Post))
                            {
                                @Html.Hidden("UID", item.UID)
                                <button type="submit" class="btn-link" value="Delete" onclick="return confirm('確定是否要刪除此筆資料?')">Delete</button>
                            }
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
